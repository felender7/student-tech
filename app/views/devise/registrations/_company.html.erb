<section id="account">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
   <%= devise_error_messages! %>
  <div class="row">

    <div class="col-lg-8">
      <h3>Company Details >> Tell us a little about yourself.</h3>
      <hr>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <%= f.text_field :company_name, autofocus: true, class: 'form-control', placeholder: "Company Name" %>
          </div>

          <div class="form-group">
            <%= f.text_field :type_of_company, autofocus: true, class: 'form-control', placeholder: "Type of Company" %>
          </div>

          <div class="form-group">
            <%= f.text_field :comercial_name_of_the_business, autofocus: true, class: 'form-control', placeholder: "Comercial Name of the Business" %>
          </div>

          <div class="form-group">
            <%= f.text_field :vat_number, autofocus: true, class: 'form-control', placeholder: "VAT Number" %>
          </div>

          <div class="form-group">
            <%= f.text_field :company_contact, autofocus: true, class: 'form-control', placeholder: "Company Contact" %>
          </div>
          <div class="form-group">
            <%= f.text_area :company_address,class:'form-control' , placeholder:'Company Address'%>
          </div>
          <div class="form-group">
            <%= f.text_field :name,  class: 'form-control', placeholder: "Full Name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :nationality, class:'form-control', placeholder:'Nationality' %>
          </div>



        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <label for="date_of_birth">Date of Birth</label><br>
            <%= f.text_field :date_of_birth, class:'form-control', placeholder:'1990/06/23' %>
      
          </div>

          <div class="form-group">
            <%= f.text_field :place_of_birth, class:'form-control',placeholder: 'Place of Birth' %>
          </div>

          <div class="form-group">
            <%= f.select :gender,['Male', 'Female'],{}, include_blank: true, class:'form-control' %>
          </div>
          <div class="form-group">
            <%= f.text_field :id_number, class:'form-control', placeholder:'ID Number'%>
          </div>

          <div class="form-group">
            <%= f.text_field :civil_status, class:'form-control', placeholder:'Civil Status' %>
          </div>
          <div class="form-group">
            <%= f.text_field :alternative_email, class:'form-control', placeholder:'Alternative Email' %>
          </div>

          <div class="form-group">
            <%= f.text_area :home_address,class:'form-control' , placeholder:'Home Address'%>
          </div>
        </div>
      </div>
    </div>

    <!-- Accounts -->
    <div class="col-lg-4">
      <h3>Account.</h3>
      <hr>
      <div class="form-group">
         <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address' %>
       </div>

       <div class="form-group">
         <%= f.text_field :phone, autofocus: true, class: 'form-control', placeholder: "Phone Number" %>
       </div>

       <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
         <div class="alert alert-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
       <% end %>

       <div class="form-group">
         <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'  %>
         <p class="form-text text-muted"><small>Leave password blank if you don't want to change it</small></p>
       </div>

       <div class="form-group">
         <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password'  %>
       </div>

       <div class="form-group">
         <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Current Password'  %>
         <p class="form-text text-muted"><small>We need your current password to confirm your changes</small></p>
       </div>
     </div>
  </div>
 <!--acctions -->
 <div class="row">
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.submit "Save Changes", class: 'btn btn-lg btn-block btn-primary' %>
      <hr>
      <%= link_to "Deactivate my account",  registration_path(resource_name), data: { confirm: "Are you sure? You cannot undo this." }, method: :delete, class:'text-danger' %>
    </div>
  </div>
</div>


    <%end%>
  </div>
</section>
